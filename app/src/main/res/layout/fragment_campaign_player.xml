<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CampaignPlayerFragment"
    style="@style/AppTheme.NoActionBar"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:id="@+id/guild">

        <TextView
            android:text="Guild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guild_name"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <CheckBox
            android:text="@string/saved_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saved_coin"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/hero1"
        android:layout_weight="5">

        <TextView
            android:text="Item 1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem11"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Item 2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem12"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Item 3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem13"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Item 4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem14"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Death Curse"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroDeath1"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <TextView
            android:text="Hero 1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroName1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/hero2"
        android:layout_weight="5">

        <TextView
            android:text="Hero 2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroName2"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:text="Item 1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem21"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Item 2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem22"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Item 3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem23"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Item 4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem24"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Death Curse"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroDeath2"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:id="@+id/hero3"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TextView
            android:text="Hero 3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroName3"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:text="Item 2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem32"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Item 3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem33"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Item 4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem34"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

        <TextView
            android:text="Death Curse"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroDeath3"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <TextView
            android:text="Item 1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/heroItem31"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:textAlignment="center" />

    </GridLayout>

</LinearLayout>
